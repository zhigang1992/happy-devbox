{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "outDir": "dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "paths": {
            "@helpers/*": ["./helpers/*"]
        }
    },
    "include": [
        "helpers/**/*.ts",
        "tests/**/*.ts",
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
